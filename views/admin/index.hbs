<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <style>
        *{margin:0;padding:0;}
        .login {
            padding: 0 22px 0 22px;
            display: none;
        }
        .login .left {
            float: left;
            width: 160px;
        }
        .login .right {
            float: right;
        }
        .login__input {
            width: 100%;
            height: 70px;
            padding: 30px 0px 0 0px;
            box-sizing: border-box;
            border-bottom: 1px solid #4476a7;
        }
        .login__input > input {
            width: 100%;
            height: 100%;
            border: none;
            font-size: 16px;
            padding-left: 5px;
            outline: none;
        }
        .login__btn {
            display: block;
            width: 100%;
            height: 35px;
            background: #4476a7;
            text-align: center;
            line-height: 35px;
            text-decoration: none;
            color: #fff;
            font-size: 14px;
            letter-spacing: 4px;
            border-radius: 4px;
            margin: 36px auto;
        }
        .login__qcode {
            width: 120px;
            height: 120px;
            margin-top: 60px;
            background: url(vendor/qcode.png);
            background-size: cover;
        }
    </style>
</head>
<body>




    <div class="login">
        <div class="left">
            <div class="login__input">
                <input id="username" type="text" placeholder="用户名">
            </div>
            <div class="login__input">
                <input id="password" type="password" placeholder="密码">
            </div>
            <a href="javascript:;" class="login__btn">登录</a>   
        </div>
        <div class="right">
            <div class="login__qcode"></div>
        </div>
    </div>
    <script src="/vendor/jquery.min.js"></script>
    <script src="/vendor/layer/layer.js"></script>
    <script>
        var index;
        setTimeout(function(){
            layer.open({
                title: '请登录',
                type: 1,
                skin: 'layui-layer-demo', //样式类名
                closeBtn: 0, //不显示关闭按钮
                shift: 2,
                move: false,
                content: $('.login'),
                skin: 'layui-layer-lan',
                area: '360px',
                success: function(dom, layer){
                    $('#username').focus();
                    index = layer;
                }
            });
        }, 1000);
        var login = function(){
            var username = $('#username').val();
            var password = $('#password').val();
            $.post('/admin',{
                username: username,
                password: password
            }, function (data) {
                if (data.status === 0) {
                    layer.msg(data.msg);
                } else {
                    layer.close(index);
                    layer.msg(data.msg);
                }
            })
        }
        $('#password').keydown(function(e){
            if (e.keyCode == 13) {
                login();
            }
        });
        $('.login__btn').click(function(){
            login();
        });
    </script>
</body>
</html>