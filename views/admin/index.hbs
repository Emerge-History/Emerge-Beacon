<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    <link rel="stylesheet" href="/vendor/eileen/eileen.min.css">
    <link rel="stylesheet" href="/admin/css/index.css">
</head>
<body>
    <header class="header">
        <div class="w">
            <h1>Emerge</h1>
            <p>beacon管理系统</p>
        </div>
    </header>

    <section class="container">
        <div class="w">
            <aside class="sider">
                <ul class="sider__container">
                    <span class="sider__add"><i class="iconfont icon-plus"></i>新建分组</span>
                </ul>
            </aside>
            <article class="content">
                <table class="table table-border table-bordered">
                    <thead>
                        <tr>
                            <th style="width:70px;text-align:center;"><label><input type="checkbox"><span>全选</span></label></th>
                            <th>device_id</th>
                            <th>comment</th>
                            <th>操作<span class="table__handle"><a href="javascript:;" id="addDevice">新增设备</a><a href="javascript:;" id="removeDevice">批量移除</a></span></th>
                        </tr>
                    </thead>
                    <tbody id="tbody" data-groupId="">

                    </tbody>
                </table>
                <div id="pageDiv" style="text-align: left;margin-top: 20px;"></div>
            </article>
        </div>
    </section>

    <div class="login">
        <div class="login__content" data-login={{isLogin}}>
            <div class="left">
                <div class="login__input">
                    <input id="username" type="text" placeholder="用户名">
                </div>
                <div class="login__input">
                    <input id="password" type="password" placeholder="密码">
                </div>
                <a href="javascript:;" class="login__btn">登录</a>   
            </div>
            <div class="right">
                <div class="login__qcode"></div>
            </div>
        </div>
    </div>

    <script src="/vendor/jquery.min.js"></script>
    <script src="/vendor/layer/layer.js"></script>
    <script src="/vendor/laypage/laypage.js"></script>
    <script src="/admin/js/index.js"></script>
</body>
</html>